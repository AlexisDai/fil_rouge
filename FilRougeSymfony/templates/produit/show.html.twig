{% extends 'base.html.twig' %}

{% block title %}Détails{% endblock %}

{% block produit %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>LibelleCourt</th>
                <td>{{ produit.libelleCourt }}</td>
            </tr>
            <tr>
                <th>LibelleLong</th>
                <td>{{ produit.libelleLong }}</td>
            </tr>
            <tr>
                <th>ReferenceFournisseur</th>
                <td>{{ produit.referenceFournisseur }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ produit.photo }}</td>
            </tr>
            <tr>
                <th>PrixAchat</th>
                <td>{{ produit.prixAchat }}</td>
            </tr>
            <tr>
                <th>PrixHorsTaxe</th>
                <td>{{ produit.prixHorsTaxe }}</td>
            </tr>
        </tbody>
    </table>
    
    <a href="{{ path('app_produit_index', {'id': produit.rubrique.id}) }}">Retour</a>
